<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>MathBoost</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

    <link rel="stylesheet" type="text/css" media="screen" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.9.3/css/bootstrap-select.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.9.3/js/bootstrap-select.min.js"></script>
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" id="email" required title="Email is required!">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" id="password"> 
            <span id="warn1"></span>
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" class="form-control" name="password2" id="pass2"> 
            <span id="warn2"></span>
        </div>
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="firstname" required title="First Name is required.">
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname" required title="Last Name is required.">
        </div>
        <fieldset class="form-group">
    <legend>Account Type</legend>
    <div class="form-check">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="jobRadio" onclick="javascript:tutorCheck();" id="student" value="Student" checked>
        Student
      </label>
    </div>
    <div class="form-check">
    <label class="form-check-label">
        <input type="radio" class="form-check-input" name="jobRadio" onclick="javascript:tutorCheck();" id="tutor" value="Tutor">
        Tutor
      </label>
    </div>
        <div class="form-group" id="hidden_div" style="display:none">
        Select Classes<br>
            <select name="classes" class="selectpicker" multiple>
                <optgroup label="Math">
                  <option value="Algebra">Algebra</option>
                  <option value="Trigonometry">Trigonometry</option>
                  <option value="Calculus">Calculus</option>
                </optgroup>
                <optgroup label="Humanities">
                  <option value="History">History</option>
                </optgroup>
            </select>
        </div>
  </fieldset>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>
    <script>
        function tutorCheck() {
            if (document.getElementById('tutor').checked) {
                document.getElementById('hidden_div').style.display = 'block';
            }
            else document.getElementById('hidden_div').style.display = 'none';
        }

        var pass1 = document.getElementById("password");
        var pass2 = document.getElementById("pass2");
        var email = document.getElementById("email");
        var bool1 = false;
        var bool2 = false;

        function check2Match(){
            if (pass1.value === pass2.value){
                document.getElementById("warn1").textContent = "Passwords match!"
                bool1 = true;
            }
            else
                document.getElementById("warn2").textContent = "Passwords do not match!"
                bool1 = false;
            console.log("Event firing.")
        }


        pass2.addEventListener("change", check2Match, false);
        //email.addEventListener("change", checkEmail, false);
    </script>
</body>
</html>