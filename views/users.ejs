<!-- views/users.ejs -->
<%- include includes/header %>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> User Listing Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Your Info</h3>

                    <p>
                        <strong>First Name</strong>: <%= user.local.firstname %><br>
                        <strong>Last Name</strong>: <%= user.local.lastname %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                        <strong>Type</strong>: <%= user.local.job %>
                        <% if(user.local.job === "Tutor") {%>
                        <strong>Classes Offered:</strong> <br>
                                <% for (var i=0;i<user.local.classes.length;i++) { %>
                               <%= user.local.classes[i] %><br>
                                <% }} %>
                    </p>

            </div>
        </div>
        
        <!-- GLOBAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Other Users</h3>

                    <p>
                        <% if( Array.isArray(people) ) { %>
                        <ul>
                        <%people.forEach( function( us ){ %>
                        <strong>id</strong>: <%= us._id %><br>
                        <strong>First Name</strong>: <%= us.local.firstname %><br>
                        <strong>Last Name</strong>: <%= us.local.lastname %><br>
                        <strong>email</strong>: <%= us.local.email %><br>
                        <strong>Type</strong>: <%= us.local.job %><br>
                        <% if(us.local.job === "Tutor") {%>
                        <strong>Classes Offered:</strong> <br>
                                <% for (var i=0;i<us.local.classes.length;i++) { %>
                               <%= us.local.classes[i] %><br>
                                <% }} %>
                        <hr>
                        <% })} else { %>
                        <b>
                        No Users Other Than You
                        </b>
                        <% }; %>
                    </p>

            </div>
        </div>
    </div>

</div>
</body>
</html>